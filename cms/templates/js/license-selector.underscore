<div class="license-buttons">
  <div class="wrapper-license-type-buttons">
      <button class="action license-button" data-license="ARR" type="button" name="license-arr" value="<%= gettext("All rights reserved") %>" data-tooltip="<%= gettext("You reserve all rights for your work") %>">
          <span><%= gettext("All rights reserved") %></span>
      </button>
      <button class="action license-button" data-license="CC" type="button" name="license-cc" value="<%= gettext("Creative Commons") %>" data-tooltip="<%= gettext("You waive some rights for your work, such that others can use it too") %>">
          <span><%= gettext("Creative Commons") %></span>
      </button>
      <p class='tip tip-inline'><%=
        interpolate(
            gettext("If you are not familiar with the options, %(link_start)slearn more%(link_end)s prior to selecting a license."),
            {
                link_start: "<a href='http://creativecommons.org/about' target='_blank'>",
                link_end: "</a>"
            },
            true
        )
      %></p>
  </div>
</div>
<div class="selected-cc-license-options">
  <label class="label setting-label"><%= gettext("Creative Commons Options") %></label>
  <p class='tip tip-inline'><%= gettext("The following options are available for inclusion in your Creative Commons licensing.") %></p>
  <ul class="license-cc-options">
    <li class="action-item license-button selected" data-license="BY">
      <i class="icon-check disabled"></i>
      <h4 class='option-name'><%= gettext('Attribution') %></h4>
      <div class="explanation">
        <%= gettext('Allow others to copy, distribute, display and perform your copyrighted work but only if they give credit the way you request. This is enabled for all Creative Commons licenses on edX.') %>
      </div>
    </li>

    <li class="action-item license-button clickable" data-license="NC">
      <i class="icon-check"></i>
      <i class="icon-unchecked"></i>
      <h4 class='option-name'><%= gettext('Noncommercial') %></h4>
      <div class="explanation">
        <%= gettext('Allow others to distribute, display and perform your work - and derivative works based upon it - but for noncommercial purposes only.') %>
      </div>
    </li>

    <li class="action-item license-button clickable" data-license="ND">
      <i class="icon-check"></i>
      <i class="icon-unchecked"></i>
      <h4 class='option-name'><%= gettext('No Derivatives') %></h4>
      <div class="explanation">
        <%= gettext('Allow others to copy, distribute, display and perform only verbatim copies of your work, not derivative works based upon it.') %>
      </div>
    </li>

    <li class="action-item license-button clickable last" data-license="SA">
      <i class="icon-check"></i>
      <i class="icon-unchecked"></i>
      <h4 class='option-name'><%= gettext('Share Alike') %></h4>
      <div class="explanation">
        <%= gettext('Allow others to distribute derivative works only under a license identical to the license that governs your work.') %>
      </div>
    </li>
  </ul>
</div>
<div class="selected-license-text">
  <label class='label setting-label' for="license"><%= gettext('License Display') %></label>
  <p class='tip tip-inline'><%= gettext("The following message will be displayed underneath the content.") %></p>
  <span class="xmodule_licensable opaque"><%= license_preview %></span>
  <input class="license" type="hidden" name="license" aria-required="false" value="<%= license_data %>" />
</div>
